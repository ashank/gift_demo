<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <mediapick.testdemo.GiftRootLayout
        android:id="@+id/gift_root"
        android:layout_width="match_parent"
        android:layout_height="146dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="12dp"
        android:background="@android:color/holo_green_light"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <mediapick.testdemo.GiftItemLayout
            android:id="@+id/gil_left_gift_top"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:visibility="invisible"
            app:gift_index="0" />

        <mediapick.testdemo.GiftItemLayout
            android:id="@+id/gil_left_gift_bottom"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_marginBottom="-14dp"
            android:layout_marginTop="6dp"
            android:visibility="invisible"
            app:gift_index="1" />

    </mediapick.testdemo.GiftRootLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/a_liwu_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="A(礼物1)" />

        <Button
            android:id="@+id/a_liwu_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="A(礼物2)" />

        <Button
            android:id="@+id/b_liwu_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="B(礼物1)" />

        <Button
            android:id="@+id/b_liwu_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="B(礼物2)" />


    </LinearLayout>
</RelativeLayout>
