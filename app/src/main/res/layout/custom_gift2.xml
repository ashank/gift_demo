<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="80dp"
    android:background="@drawable/bg_shape_gift_left">

    <ImageView
        android:id="@+id/image_left_gift_head_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp" />

    <TextView
        android:id="@+id/txt_left_gift_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/image_left_gift_head_icon"
        android:layout_marginLeft="46dp"
        android:gravity="top"
        android:textColor="#E0B761"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/txt_left_gift_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/image_left_gift_head_icon"
        android:layout_marginLeft="46dp"
        android:gravity="top"
        android:textColor="#85ffffff"
        android:textSize="11sp" />

    <ImageView
        android:id="@+id/image_left_gift_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/txt_left_gift_name" />

    <mediapick.testdemo.MoneyTextView
        android:id="@+id/txt_left_gift_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@id/image_left_gift_icon"
        android:textColor="#ffde00"
        android:textSize="20sp" />

</RelativeLayout>