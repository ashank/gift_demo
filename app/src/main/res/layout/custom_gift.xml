<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginTop="21dp"
        android:background="@drawable/bg_shape_round6_all_black">

        <ImageView
            android:id="@+id/image_left_gift_head_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp" />

        <TextView
            android:id="@+id/txt_left_gift_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/image_left_gift_head_icon"
            android:layout_marginLeft="46dp"
            android:gravity="top"
            android:text="kalu"
            android:textColor="#E0B761"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txt_left_gift_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/image_left_gift_head_icon"
            android:layout_marginLeft="46dp"
            android:gravity="top"
            android:textColor="#85ffffff"
            android:textSize="11sp" />

        <mediapick.testdemo.MoneyTextView
            android:id="@+id/txt_left_gift_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="210dp"
            android:layout_marginRight="210dp"
            android:paddingLeft="10dp"
            android:textColor="#ffde00"
            android:textSize="20sp" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/image_left_gift_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="135dp"
        android:src="@mipmap/ic_launcher" />

</RelativeLayout>